<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <style name="TextViewNoData">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/secondary_text</item>
	</style>
    
    <style name="TextViewNextDate">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white_color</item>
	</style>

    <style name="TextViewNextComment">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/light_primary_color</item>
    </style>

    <style name="TextViewNextDays">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_color</item>
    </style>
	
    <style name="TextViewEntityDate">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextViewEntityComment">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextViewEntityDays">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ListSeparator">
        <item name="android:background">@color/divider_color</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textStyle">bold</item>
    </style>




    <style name="AppThemeLight" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/EmmeniaActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EmmeniaActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
